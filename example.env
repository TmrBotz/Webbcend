# Telegram Configuration
API_ID=1234567                # Example: 1234567 (integer)
API_HASH=your_api_hash        # Example: abcd1234efgh5678ijkl
BOT_TOKEN=your_bot_token      # Example: 123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
OWNER_ID=123456789            # Example: 123456789 (your Telegram user ID)

# Database
DATABASE_URL=mongodb+srv://user:pass@cluster.mongodb.net/dbname  # MongoDB URI

# Chat IDs (use negative IDs for supergroups)
AUTH_CHAT=-100123456789 -100987654321   # Space-separated chat IDs
LOGS_CHAT=-1001234567891                # Example: -1001234567891
POST_CHAT=-1001234567891                # Same as above or different

# Admin Panel Login
ADMIN_USERNAME=admin          # Example: admin
ADMIN_PASSWORD=adminadmin     # Example: strongpassword123

# Site Configuration
SITE_SECRET=your_secret_key   # Random string used for session/security
TMDB_API_KEY=                 # Your TMDB API key
SITE_NAME=reelnn              # Example: reelnn
POST_CHAT_LINK=https://t.me/yourchannel  # Telegram channel/group link
ENABLE_REGISTRATION=True      # True or False

# Sign-Up Page Details
SIGNUP_IMAGE=https://link.to/image.jpg  # Image URL for signup page
# Optional Settings
DELETE_AFTER_MINUTES=10       # Number of minutes before auto-delete
POST_UPDATES=True             # True or False
USE_CAPTION=False             # True or False

# Server Port
PORT=                     # Example: 6519
